{
  "name": "tecnologia-equidade",
  "version": "1.2.1",
  "description": "achieve equity with ethical use of technology",
  "main": "index.html",
  "scripts": {
    "clean": "npm-run-all --parallel clean:*",
    "clean:assets": "rimraf ./static/assets/**/*.{css,img,js,png,gif,jpg,map}",
    "clean:testReports": "rimraf ./_testReports/**/*.xml",
    "autoprefixer": "postcss --use autoprefixer cssnano --safe -r static/assets/stylesheets/**/*.css",
    "nano": "postcss --use cssnano --safe -r static/assets/stylesheets/**/*.css",
    "compress:img": "imagemin source/images/**/*.{gif,jpg,png} --out-dir=static/assets/images",
    "scss": "node-sass source/stylesheets --output-style compressed --output static/assets/stylesheets --source-map true",
    "uglify": "uglifyjs static/assets/scripts/index.js -c -r -o static/assets/scripts/index.js",
    "prebuild": "npm-run-all --parallel lint clean",
    "build": "npm-run-all build:sass build:img build:fonts cachebust",
    "postbuild": "cross-env NODE_ENV=production hugo --ignoreCache --cleanDestinationDir",
    "build:sass": "npm-run-all scss autoprefixer nano",
    "build:fonts": "cpy \"./source/fonts/*\" \"static/assets/fonts\"",
    "build:img": "npm run compress:img",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "npm run lint:sass",
    "lint:sass": "sass-lint \"./source/stylesheets/**/*.scss\" --verbose --no-exit --format junit --output ./_testReports/sassLint.xml",
    "dev": "npm-run-all build:* --parallel watch start:*",
    "start:hugo": "cross-env NODE_ENV=development hugo server --noHTTPCache=true --ignoreCache --templateMetrics --disableFastRender",
    "pretest": "npm run lint",
    "watch": "npm-run-all --parallel watch:*",
    "watch:sass": "onchange \"./source/stylesheets/**/*.scss\" -- npm run build:sass",
    "watch:img": "onchange \"./source/images/**/*.{gif,jpg,png,svg}\" -- npm run build:img",
    "watch:fonts": "onchange \"./source/fonts/**/*.*\" -- npm run build:fonts",
    "cachebust": "npm-run-all cachebust:media cachebust:cssAndJs",
    "cachebust:cssAndJs": "hashmark -l 8 assets/**/*.{js,css}           {dir}/{name}-{hash}{ext} --cwd static  | replaceinfiles -s \"layouts/**/*.html\"                                -d \"{dir}/{base}\"",
    "cachebust:media": "hashmark -l 8 assets/**/*.{gif,jpg,png,svg,mp4} {dir}/{name}-{hash}{ext} --cwd static  | replaceinfiles -s \"{content,data,layouts,static}/**/*.{md,html,css}\" -d \"{dir}/{base}\"",
    "preversion": "git checkout master && git merge develop",
    "version": "version-changelog CHANGELOG.md && changelog-verify CHANGELOG.md && git add CHANGELOG.md",
    "postversion": "git checkout develop && git merge master"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tecnologiaequidade/tecnologiaequidade.github.io"
  },
  "keywords": [
    "html",
    "hugo",
    "npm",
    "sass"
  ],
  "author": "Evelyn Perez & Robson Sobral",
  "license": "ISC",
  "homepage": "http://tecnologiaequidade.org.br",
  "devDependencies": {
    "@songkick/replaceinfiles": "^1.1.6",
    "autoprefixer": "^8.1.0",
    "changelog-verify": "^1.1.0",
    "cpy-cli": "^1.0.1",
    "cross-env": "^5.1.3",
    "cssnano": "^3.10.0",
    "hashmark": "^5.0.0",
    "imagemin-cli": "^3.0.0",
    "include-media": "^1.4.9",
    "modularscale-sass": "^3.0.5",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "onchange": "^3.3.0",
    "postcss-cli": "^5.0.0",
    "rimraf": "^2.6.2",
    "sass-lint": "^1.12.1",
    "susy": "^3.0.3",
    "svgo": "^1.0.5",
    "uglify-js": "^3.3.13",
    "version-changelog": "^2.1.0"
  }
}
