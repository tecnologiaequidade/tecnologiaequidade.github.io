{
  "name": "tecnologia-equidade",
  "version": "0.1.0",
  "description": "achieve equity with ethical use of technology",
  "main": "index.html",
  "scripts": {
    "autoprefixer": "postcss --use autoprefixer cssnano --safe -r static/assets/stylesheets/**/*.css",
    "nano": "postcss --use cssnano --safe -r static/assets/stylesheets/**/*.css",
    "compress:img": "imagemin source/images/**/*.{gif,jpg,png} --out-dir=static/assets/images",
    "scss": "node-sass source/stylesheets --output-style compressed --output static/assets/stylesheets --source-map true",
    "uglify": "uglifyjs static/assets/scripts/index.js -c -r -o static/assets/scripts/index.js",
    "build:dev": "npm run build:sass && npm run build:img && npm run build:fonts",
    "build:sass": "npm run scss && npm run autoprefixer && npm run nano",
    "build:fonts": "cpy \"./source/fonts/*\" \"static/assets/fonts\"",
    "build:img": "npm run compress:img",
    "build:prod": "npm run build:sass && npm run build:img && npm run hashmark",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "npm run lint:sass",
    "lint:sass": "sass-lint 'source/stylesheets/**/*.scss' -v -q",
    "pretest": "npm run lint",
    "watch:sass": "onchange 'source/stylesheets/**/*.scss' -- npm run build:sass",
    "watch:all": "npm run serve & npm run watch:sass",
    "watch:fonts": "onchange \"./source/fonts/**/*.*\" -- npm run build:fonts",
    "hashmark": "hashmark -l 8 dist/**/*.{js,css,map} {dir}/{name}-{hash}{ext} --cwd static --asset-map ../data/assets.json",
    "version": "version-changelog CHANGELOG.md && changelog-verify CHANGELOG.md && git add CHANGELOG.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tecnologiaequidade/tecnologiaequidade.github.io"
  },
  "keywords": [
    "html",
    "hugo",
    "npm",
    "sass"
  ],
  "author": "Evelyn Perez & Robson Sobral",
  "license": "ISC",
  "homepage": "http://tecnologiaequidade.org.br",
  "devDependencies": {
    "autoprefixer": "^8.1.0",
    "changelog-verify": "^1.1.0",
    "cpy-cli": "^1.0.1",
    "cssnano": "^3.10.0",
    "hashmark": "^5.0.0",
    "imagemin-cli": "^3.0.0",
    "include-media": "^1.4.9",
    "node-sass": "^4.7.2",
    "onchange": "^3.3.0",
    "postcss-cli": "^5.0.0",
    "sass-lint": "^1.12.1",
    "susy": "^3.0.3",
    "svgo": "^1.0.5",
    "uglify-js": "^3.3.13",
    "version-changelog": "^2.1.0"
  }
}
